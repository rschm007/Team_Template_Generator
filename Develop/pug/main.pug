//- mixin for teammember data insertion
mixin teamMember(memberData)
    .flex-initial(class='card employee-card')
        .flex-1.card-header
            h2.card-title {{ name }}
            .card-title
            if teamMember.engineer
                h3 
                    i(class="fas fa-glasses mr-2") Engineer
            if teamMember.intern
                h3 
                    i(class="fas fa-user-graduate mr-2") Intern
            if teamMember.manager
                h3 
                    i(class="fas fa-mug-hot mr-2") Manager
            if teamMember.employee
                h3 
                    i(class="fas fa-user-tie mr-2") Employee
        .card-body(class='col-12 d-flex justify-content-center')
            ul.list-group
                li.list-group-item 
                    p ID: {{ id }}
                li.list-group-item
                    a(href='mailto: ${{ email }}'){{ email }}
                li.list-group-item
                    p GitHub: 
                        a(href='{{ github }}' target="_blank" rel="noopener noreferrer"){{ github }}

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title My Team
        //- fontawesome
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.15.1/css/all.css", integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp", crossorigin="anonymous")
        //- tailwindcss
        link(href='../Assets/styles/tailwind.css' rel='stylesheet')
        //- local css
        link(href='../Assets/styles/styles.css' rel='stylesheet')
        //- jquery
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    body
        //- header
        .flex
            header.flex-1(class='justify-center text-white mx-4 my-2')
                h1(class='text-center bg-pink-600 px-5 py-3 rounded-lg') My Team
        //- area where employee cards will be inserted
        main.flex
            .flex-1.team-area